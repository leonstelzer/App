<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Userliste.findFriends"
        android:background="@drawable/gradientback">




    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


    <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">


        <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_below="@+id/seekbar"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:paddingBottom="35dp">


            <AutoCompleteTextView
                    android:id="@+id/ort"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="30dp"
                    android:inputType="text"
                    android:drawableRight="@drawable/ic_add_location_black_24dp"
                    android:padding="10dp"
                    android:hint="Ort eingeben"
                    />


            <EditText
                    android:id="@+id/interessen"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="30dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Interessen"
                    />

            <ImageView
                    android:layout_below="@+id/interessen"
                    android:id="@+id/date"
                    android:layout_width="88dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/date"
                    android:textColor="@color/colorPurple"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/etdate"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="-55dp"
                    android:layout_marginRight="50dp"
                    android:drawablePadding="30dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:text="Datum anzeigen" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
            android:id="@+id/btLogin"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bt_uisquare"
            android:text="Filter anwenden"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


</RelativeLayout>