<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.demotxt.droidsrce.profileui.MainActivity"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="344dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="279dp"
                android:background="@drawable/grad"
                android:orientation="vertical">


            <ImageView
                    android:id="@+id/bildchat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/chat" />
            <ImageView
                    android:id="@+id/bildkate"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/badminton" />

            <TextView
                    android:id="@+id/kate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Katgorie"
                    android:textColor="#fff"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/privat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Privat"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.CardView
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kosten"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/kosten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="125"
                            android:textColor="@color/colorBlue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Erstellt von"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="1205"
                            android:textColor="@color/colorBlue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teilnehmer"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/anzahl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="360"
                            android:textColor="@color/colorBlue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

            <ImageView
                    android:id="@+id/maps"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/located" />

            <TextView
                    android:id="@+id/ort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Wiliam@gmail.com"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/time" />

            <TextView
                    android:id="@+id/zeit"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="+266 225 225"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/date" />

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Add to group"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

            <ImageView
                    android:id="@+id/bildteilnehmer"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/add" />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/teilnehmer"
                    android:layout_width="297dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Noch keine Teilnehmer"
                    android:paddingLeft="20dp"
                    android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:id="@+id/linear"
            android:orientation="horizontal"
            android:layout_marginRight="0dp">


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/delete"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="Halllo"
                    android:textSize="20sp"
                    android:src="@drawable/delete"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/einladen"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="Erstellt von"
                    android:textSize="20sp"
                    android:src="@drawable/people"/>



        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/share"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="Teilnehmer"
                    android:textSize="20sp"
                    android:src="@drawable/share"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>